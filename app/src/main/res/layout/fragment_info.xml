<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_flag_mk"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/flag_mk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/image_view_flag_en"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/flag_en"
        app:layout_constraintEnd_toStartOf="@id/image_view_flag_mk"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/text_view_description_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_info"
        app:layout_constraintTop_toBottomOf="@id/image_view_flag_mk"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/image_view_first_logo"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@drawable/image_gsix_logo"
        app:layout_constraintTop_toBottomOf="@id/text_view_description_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:id="@+id/image_view_second_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_gsix_logo_two"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/image_view_first_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/image_gsix_logo_one"
        app:layout_constraintTop_toBottomOf="@+id/image_view_second_logo"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>